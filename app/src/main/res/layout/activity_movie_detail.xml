<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:layout_gravity="top"
    android:orientation="vertical"
    tools:context="com.ferr3t.don.gurumovies.MovieDetail">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:paddingBottom="8dp"
        android:id="@+id/image_view_background" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="140dp"
        android:paddingEnd="16dp"
        android:id="@+id/image_view_poster" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingStart="4dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"

        android:layout_toRightOf="@id/image_view_poster"
        android:layout_below="@id/image_view_background"
        android:id="@+id/text_view_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:id="@+id/text_view_rating"
        android:layout_toRightOf="@id/image_view_poster"
        android:layout_below="@id/text_view_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="/10"
        android:paddingTop="24dp"
        android:layout_toRightOf="@id/text_view_rating"
        android:layout_below="@id/text_view_title"
        android:id="@+id/text_view_base" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_view_poster"
        android:paddingTop="4dp"
        android:id="@+id/scrollView" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingStart="16dp"
            android:paddingRight="16dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/text_view_description" />

    </ScrollView>

</RelativeLayout>